<?xml version="1.0" encoding="UTF-8"?>
<Module xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/BUTR/Bannerlord.XmlSchemas/master/SubModule.xsd">
	<Id value="TAOM" />
	<Name value="TAOM" />
	<Version value="v0.1.0" />
	<DefaultModule value="false" />
	<ModuleCategory value="Singleplayer"/>
	<ModuleType value="Community" />
	<DependedModules>
		<DependedModule Id="Native" />
		<DependedModule Id="SandBoxCore" />
		<DependedModule Id="Sandbox" />
		<DependedModule Id="CustomBattle" />
	</DependedModules>
	<DependedModuleMetadatas>
		<DependedModuleMetadata id="Bannerlord.Harmony" order="LoadBeforeThis" />
		<DependedModuleMetadata id="Native" order="LoadBeforeThis" version="e1.3.0.*" />
		<DependedModuleMetadata id="SandBoxCore" order="LoadBeforeThis" />
		<DependedModuleMetadata id="Sandbox" order="LoadBeforeThis" />
		<DependedModuleMetadata id="CustomBattle" order="LoadBeforeThis" />
	</DependedModuleMetadatas>
	<SubModules>
		<SubModule>
			<Name value="TAOM" />
			<DLLName value="TAOM.dll" />
			<SubModuleClassType value="TAOM.SubModule" />
			<Tags />
		</SubModule>
	</SubModules>
	<Xmls>
		<!-- XSLT transformations to replace vanilla kingdoms with TAOM versions -->
		<XmlNode>
			<XmlName id="Kingdoms" path="spkingdoms"/>
			<IncludedGameTypes>
				<GameType value="Campaign"/>
				<GameType value="CampaignStoryMode"/>
			</IncludedGameTypes>
		</XmlNode>
		<!-- XSLT transformations to rename vanilla cultures to TAOM names -->
		<XmlNode>
			<XmlName id="SPCultures" path="spcultures"/>
			<IncludedGameTypes>
				<GameType value="Campaign"/>
				<GameType value="CampaignStoryMode"/>
			</IncludedGameTypes>
		</XmlNode>
		<!-- XSLT transformations to rename vanilla clans to TAOM names -->
		<XmlNode>
			<XmlName id="Factions" path="spclans"/>
			<IncludedGameTypes>
				<GameType value="Campaign"/>
				<GameType value="CampaignStoryMode"/>
			</IncludedGameTypes>
		</XmlNode>
		<!-- XSLT transformations to rename vanilla lords to TAOM names and add BodyProperties -->
		<XmlNode>
			<XmlName id="NPCCharacters" path="lords"/>
			<IncludedGameTypes>
				<GameType value="Campaign"/>
				<GameType value="CampaignStoryMode"/>
			</IncludedGameTypes>
		</XmlNode>
		<!-- XSLT transformations to add TAOM biographical text to heroes -->
		<XmlNode>
			<XmlName id="Heroes" path="heroes"/>
			<IncludedGameTypes>
				<GameType value="Campaign"/>
				<GameType value="CampaignStoryMode"/>
			</IncludedGameTypes>
		</XmlNode>

		<!-- ============================================== -->
		<!-- TAOM Additional XML Files (non-XSLT)          -->
		<!-- ============================================== -->

		<!-- TAOM custom cultures (erebor, rivendell, mirkwood, etc.) -->
		<XmlNode>
			<XmlName id="SPCultures" path="taom_spcultures"/>
			<IncludedGameTypes>
				<GameType value="Campaign"/>
				<GameType value="CampaignStoryMode"/>
			</IncludedGameTypes>
		</XmlNode>

		<!-- TAOM custom kingdoms -->
		<XmlNode>
			<XmlName id="Kingdoms" path="taom_spkingdoms"/>
			<IncludedGameTypes>
				<GameType value="Campaign"/>
				<GameType value="CampaignStoryMode"/>
			</IncludedGameTypes>
		</XmlNode>

		<!-- TAOM additional clans (extended vanilla + custom cultures) -->
		<XmlNode>
			<XmlName id="Factions" path="characters/clans"/>
			<IncludedGameTypes>
				<GameType value="Campaign"/>
				<GameType value="CampaignStoryMode"/>
			</IncludedGameTypes>
		</XmlNode>

		<!-- TAOM additional heroes -->
		<XmlNode>
			<XmlName id="Heroes" path="characters/heroes"/>
			<IncludedGameTypes>
				<GameType value="Campaign"/>
				<GameType value="CampaignStoryMode"/>
			</IncludedGameTypes>
		</XmlNode>

		<!-- TAOM additional lords (NPCCharacters) -->
		<XmlNode>
			<XmlName id="NPCCharacters" path="characters/lords"/>
			<IncludedGameTypes>
				<GameType value="Campaign"/>
				<GameType value="CampaignStoryMode"/>
			</IncludedGameTypes>
		</XmlNode>
	</Xmls>
</Module>
